@model AspNetCoreMvc2.Introduction.EmployeeListViewModel

@{
    Layout = null;
    var value = 10;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>RazorDemo</title>
</head>
<body>
    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>City Id</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Employees)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.CityId</td>
                </tr>
            }
        </tbody>
    </table>
    <p>@DateTime.Now</p>
    <p>3 days ago was @(DateTime.Now - TimeSpan.FromDays(3))</p>
    @{
    var number = 10;
    }
    <p>@number</p>
</body>
</html>
